<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/total"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <View
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shadow_black" />

   <LinearLayout
       android:layout_margin="16dp"
       android:background="@color/shadow_black"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/btn_serch_home"
           android:layout_weight="1"
           android:orientation="horizontal"
           >

           <EditText
               android:id="@+id/tab_search_search"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="30dp"
               android:paddingRight="30dp"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:layout_gravity="center"
               android:textSize="14sp"
               android:background="@null"
               android:singleLine="true"
               android:maxLines="1"
               android:layout_toLeftOf="@+id/tab_search_"
               android:imeOptions="actionSearch"
               />

           <ImageView
               android:id="@+id/tab_search_"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="15dp"
               android:background="@drawable/search"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true" />
       </RelativeLayout>
   </LinearLayout>

    <com.xiumi.qirenbao.widget.UserDefineScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="推荐"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <com.xiumi.qirenbao.widget.FullGridView
                android:id="@+id/recomend_girde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="20dp"
                android:scrollbars="none"
                android:numColumns="3"></com.xiumi.qirenbao.widget.FullGridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="历史记录"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
            <com.xiumi.qirenbao.widget.FullGridView
                android:id="@+id/history_girde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="20dp"
                android:scrollbars="none"
                android:numColumns="3"></com.xiumi.qirenbao.widget.FullGridView>

        </LinearLayout>
    </com.xiumi.qirenbao.widget.UserDefineScrollView>
</LinearLayout>