<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- status为0 以外的itme布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="订单:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/out_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="暂无"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/out_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="8dp"
                android:singleLine="true"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="企业主:"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/out_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:singleLine="true"
                android:text="暂无"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="跟进人:"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/master_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:singleLine="true"
                android:text="达人昵称"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="客 服:"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/out_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:singleLine="true"
                android:text="暂未跟进"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/reward"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/orangenormal"
            android:gravity="center"
            android:text="打赏"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/orangenormal"
            android:gravity="center"
            android:text="继续支付"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/refuse"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="已拒绝"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/evaluate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/orangenormal"
            android:gravity="center"
            android:text="去评价"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/my_evaluate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="已评价"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/complete"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>