<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/login_layout">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shadow_black" />

   <ImageView
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="28dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/logo"
       android:padding="10dp" />

    <LinearLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/loginActivity_phone"
                    android:padding="8dp"
                    android:background="@drawable/edittext_border"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:phoneNumber="true"
                    android:textColor="@color/forget"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="56dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/loginActivity_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="34dp"
                    android:text="+86 "
                    android:textColor="@color/forget"
                    android:textSize="15sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <EditText
                    android:id="@+id/loginActivity_password"
                    android:padding="8dp"
                    android:background="@drawable/edittext_border"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:password="true"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/forget"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="60dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/loginActivity_password"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="34dp"
                    android:text="密码"
                    android:textColor="@color/forget"
                    android:textSize="15sp" />
            </RelativeLayout>
            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_login_border"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <Button
                android:id="@+id/login_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_login_slide"
                android:text="注册"
                android:textColor="@color/title_bg"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/login_forgetpsd"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:padding="10dp"
                android:textColor="@color/forget"
                android:gravity="right"
                android:textSize="14sp"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:background="@color/black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:text="第三方登入"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:background="@color/black"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:id="@+id/weixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wechat"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/qq"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingRight="16dp"
                    android:visibility="visible"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/sina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sinaweibo"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
           android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/forget"
                android:text="注册即代表同意[ 企人宝 ]"/>
            <TextView
                android:id="@+id/link"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F4B547"
                android:text="服务条款"/>
            <TextView
                android:textColor="@color/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"/>
            <TextView
                android:id="@+id/link1"
                android:padding="5dp"
                android:textColor="#F4B547"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私条款"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>