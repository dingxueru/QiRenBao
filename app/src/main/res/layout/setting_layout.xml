<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/title_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的团队"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/toolbar"
        android:background="@color/shadow_black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/layout_nav"
            android:paddingBottom="26dp"
            android:paddingTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/graylight"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/chose_member"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:checked="true"
                android:background="@drawable/radio_parter_bg"
                android:textColor="@color/partner_text_color"
                android:drawablePadding="@dimen/drawablePadding_vertical"
                android:drawableTop="@drawable/radio_parter_member"
                android:text="成员"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/chose_apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/radio_parter_bg"
                android:textColor="@color/partner_text_color"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="申请"
                android:drawablePadding="@dimen/drawablePadding_vertical"
                android:drawableTop="@drawable/radio_parter_apply"
                android:button="@null"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/chose_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="活动"
                android:background="@drawable/radio_parter_bg"
                android:textColor="@color/partner_text_color"
                android:drawablePadding="@dimen/drawablePadding_vertical"
                android:drawableTop="@drawable/radio_parter_activity"
                android:textSize="14sp"/>

            <RadioButton
                android:id="@+id/chose_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="统计"
                android:drawablePadding="@dimen/drawablePadding_vertical"
                android:drawableTop="@drawable/radio_parter_static"
                android:button="@null"
                android:background="@drawable/radio_parter_bg"
                android:textColor="@color/partner_text_color"
                android:textSize="14sp"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/toolbar"
            android:background="@color/shadow_black" />

        <LinearLayout
            android:id="@+id/layout_team"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>