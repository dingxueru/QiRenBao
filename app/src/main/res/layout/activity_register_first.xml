<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/jmui_back_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="账户注册"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shadow_black" />

    <TextView
        android:layout_below="@+id/toolbar"
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="角色选择"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:gravity="center">
        <com.xiumi.qirenbao.widget.CircleImageView
            android:id="@+id/company_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chose_company"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="15sp"
            android:textColor="@color/forget"
            android:text="企业主"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_weight="1"
            android:text="寻找能够为自己企业提供帮助的人，并为其支付佣金"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <com.xiumi.qirenbao.widget.CircleImageView
            android:id="@+id/people_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unchose_export"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="15sp"
            android:textColor="@color/forget"
            android:text="技能达人"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="14sp"
             android:layout_weight="1"
            android:text="拥有一技之长的服务者，来企人宝平台为企业主提供优质的服务，并赚取佣金"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/textView2" />

    </LinearLayout>
    <View
        android:layout_marginTop="16dp"
        android:layout_below="@+id/introduce"
        android:id="@+id/fist"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shadow_black" />

</LinearLayout>
    </ScrollView>
<Button
android:id="@+id/next"
android:layout_alignParentBottom="true"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="下一步"
android:background="@color/shadow_black"/>

</RelativeLayout>